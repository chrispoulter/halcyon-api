{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "registryUrl": {
            "type": "string"
        },
        "registryUserName": {
            "type": "string"
        },
        "registryPassword": {
            "type": "string"
        },
        "dbHost": {
            "type": "string"
        },
        "dbPort": {
            "type": "string",
            "defaultValue": "5432"
        },
        "dbUser": {
            "type": "string"
        },
        "dbPassword": {
            "type": "secureString"
        },
        "dbDatabase": {
            "type": "string"
        },
        "dbSSL": {
            "type": "string",
            "defaultValue": "false"
        },
        "emailSmtpServer": {
            "type": "string",
            "defaultValue": "smtp.mailgun.org"
        },
        "emailSmtpPort": {
            "type": "string",
            "defaultValue": "587"
        },
        "emailSmtpUserName": {
            "type": "secureString"
        },
        "emailSmtpPassword": {
            "type": "secureString"
        },
        "emailNoReplyAddress": {
            "type": "string",
            "defaultValue": "noreply@chrispoulter.com"
        },
        "jwtSecurityKey": {
            "type": "secureString",
            "defaultValue": "change-me-1234567890"
        },
        "jwtIssuer": {
            "type": "string",
            "defaultValue": "HalcyonApi"
        },
        "jwtAudience": {
            "type": "string",
            "defaultValue": "HalcyonClient"
        },
        "jwtExpiresIn": {
            "type": "string",
            "defaultValue": "3600"
        },
        "seedEmailAddress": {
            "type": "secureString"
        },
        "seedPassword": {
            "type": "secureString"
        }
    },
    "variables": {
        "prefix": "[resourceGroup().name]",
        "plan": "[concat(variables('prefix'), '-plan')]",
        "web": "[concat(variables('prefix'), '-web')]"
    },
    "resources": [
        {
            "name": "[variables('plan')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "B1",
                "tier": "Basic",
                "size": "B1",
                "family": "B",
                "capacity": 1
            },
            "kind": "linux",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "name": "[variables('web')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('plan'))]"
            ],
            "kind": "app,linux",
            "properties": {
                "name": "[variables('web')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('plan'))]"
            }
        },
        {
            "name": "[concat(variables('web'), '/web')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2020-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('web'))]"
            ],
            "properties": {
                "healthCheckPath": "/health"
            }
        },
        {
            "name": "[concat(variables('web'), '/connectionstrings')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2020-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('web'))]"
            ],
            "properties": {
                "HalcyonDatabase": {
                    "type": "SQLServer",
                    "value": "[concat('Host=', parameters('dbHost'), ';Port=', parameters('dbPort'), ';Database=', parameters('dbDatabase'), ';Username=', parameters('dbUser') , ';Password=', parameters('dbPassword'))]"
                }
            }
        },
        {
            "name": "[concat(variables('web'), '/appsettings')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2020-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('web'))]"
            ],
            "properties": {
                "WEBSITES_PORT": "5000",
                "DOCKER_REGISTRY_SERVER_URL": "[parameters('registryUrl')]",
                "DOCKER_REGISTRY_SERVER_USERNAME": "[parameters('registryUsername')]",
                "DOCKER_REGISTRY_SERVER_PASSWORD": "[parameters('registryPassword')]",
                "Email__SmtpServer": "[parameters('emailSmtpServer')]",
                "Email__SmtpPort": "[parameters('emailSmtpPort')]",
                "Email__SmtpUserName": "[parameters('emailSmtpUserName')]",
                "Email__SmtpPassword": "[parameters('emailSmtpPassword')]",
                "Email__NoReplyAddress": "[parameters('emailNoReplyAddress')]",
                "Jwt__SecurityKey": "[parameters('jwtSecurityKey')]",
                "Jwt__Issuer": "[parameters('jwtIssuer')]",
                "Jwt__Audience": "[parameters('jwtAudience')]",
                "Jwt__ExpiresIn": "[parameters('jwtExpiresIn')]",
                "Seed__EmailAddress": "[parameters('seedEmailAddress')]",
                "Seed__Password": "[parameters('seedPassword')]"
            }
        }
    ]
}
